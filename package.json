{
    "version": "1.0.0",
    "name": "tg-to-disk",
    "author": "IRuss23@yandex.ru",
    "description": "Send images in yandex-disk by bot",
    "keywords": [
        "bot",
        "yandex",
        "telegram"
    ],
    "engines": {
        "node": ">=20.11.1"
    },
    "scripts": {
        "test": "jest",
        "prepare": "husky",
        "lint": "run-s lint:*",
        "lint:types": "tsc --noEmit",
        "lint:eslint": "eslint ./src",
        "lint:prettier": "prettier ./src",
        "start": "npx --max-old-space-size=12000 ts-node --project tsconfig.json src/index.ts",
        "dev": "npx nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.test.ts\" --exec \"ts-node src/index.ts\""
    },
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.8",
        "dotenv": "^16.4.5",
        "node-telegram-bot-api": "^0.65.1",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/node-telegram-bot-api": "^0.64.6",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "ts-jest": "^29.1.2"
    }
}
